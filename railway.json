{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run railway:build"
  },
  "deploy": {
    "startCommand": "serve -s build -l 3000",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  },
  "variables": {
    "NODE_ENV": "production",
    "DISABLE_HOT_RELOAD": "true",
    "GENERATE_SOURCEMAP": "false",
    "FAST_REFRESH": "false"
  }
}